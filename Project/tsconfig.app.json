{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "jsx": "react-jsx",
    "types": [
      "node",
      "jest",
      "react",
      "react-dom",
      "@testing-library/jest-dom",
    ],
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}